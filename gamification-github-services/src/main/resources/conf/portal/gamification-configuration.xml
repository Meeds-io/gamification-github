                <value-param>
                    <name>rule-score</name>
                    <value>30</value>
                </value-param>
                <value-param>
                    <name>rule-zone</name>
                    <value>Development</value>
                </value-param>
                <value-param>
                    <name>rule-enable</name>
                    <value>true</value>
                </value-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>


    <external-component-plugins>
        <target-component>org.exoplatform.addons.gamification.service.setting.badge.BadgeRegistry</target-component>
        <component-plugin>
            <name>badge.DeveloperNovice</name>
            <set-method>addPlugin</set-method>
            <type>org.exoplatform.addons.gamification.service.setting.badge.model.BadgeConfig</type>
            <init-params>
                <value-param>
                    <name>badge-title</name>
                    <value>Developer Novice</value>
                </value-param>
                <value-param>
                    <name>badge-description</name>
                    <value>new developer</value>
                </value-param>
                <value-param>
                    <name>badge-domain</name>
                    <value>Development</value>
                </value-param>
                <value-param>
                    <name>badge-icon</name>
                    <value>test.png</value>
                </value-param>
                <value-param>
                    <name>badge-neededScore</name>
