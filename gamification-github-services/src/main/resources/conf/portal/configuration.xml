<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
               xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <type>org.exoplatform.gamification.github.rest.GithubWebHookRest</type>
  </component>

  <component>
    <type>org.exoplatform.gamification.github.rest.HooksManagementRest</type>
  </component>

  <component>
    <type>org.exoplatform.gamification.github.services.GithubHooksManagement</type>
  </component>

  <component>
    <type>org.exoplatform.gamification.github.services.GithubIMSetting</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.social.core.manager.IdentityManager</target-component>
    <component-plugin>
      <name>GamificationProfileTracker</name>
      <set-method>registerProfileListener</set-method>
      <type>org.exoplatform.gamification.github.listener.GithubProfileListener</type>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.services.listener.ListenerService</target-component>
    <component-plugin>
      <name>exo.github.event</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.gamification.github.listener.GithubEventsListener</type>
    </component-plugin>
  </external-component-plugins>

  <import>jar:/conf/portal/gamification-github-connector-configuration.xml</import>
  <import>jar:/conf/portal/gamification-github-storage-configuration.xml</import>

</configuration>