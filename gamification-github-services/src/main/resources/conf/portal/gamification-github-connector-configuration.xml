      <type>io.meeds.gamification.plugin.EventConfigPlugin</type>
      <init-params>
        <object-param>
          <name>event</name>
          <object type="io.meeds.gamification.model.EventDTO">
            <field name="title">
              <string>createIssue</string>
            </field>
            <field name="type">
              <string>github</string>
            </field>
            <field name="trigger">
              <string>createIssue</string>
            </field>
            <field name="cancellerEvents">
              <collection type="java.util.ArrayList" item-type="java.lang.String">
                <value>
                  <string>closeIssue</string>
                </value>
              </collection>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>ConnectorConnectGithub</name>
      <set-method>addPlugin</set-method>
      <type>io.meeds.gamification.plugin.EventConfigPlugin</type>
      <init-params>
        <values-param>
          <name>isVerificationRequired</name>
          <value>true</value>
        </values-param>
        <object-param>
          <name>event</name>
          <object type="io.meeds.gamification.model.EventDTO">
            <field name="title">
              <string>connectorConnectGithub</string>
            </field>
            <field name="type">
              <string>meeds</string>
            </field>
            <field name="trigger">
              <string>connectorConnectGithub</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
