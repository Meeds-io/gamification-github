            <field name="trigger">
              <string>requestReviewForPullRequest</string>
            </field>
            <field name="cancellerEvents">
              <collection type="java.util.ArrayList" item-type="java.lang.String">
                <value>
                  <string>reviewRequestRemoved</string>
