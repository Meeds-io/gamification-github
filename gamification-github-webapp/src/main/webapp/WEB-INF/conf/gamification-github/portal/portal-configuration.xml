<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd"
               xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">

  <external-component-plugins>
    <target-component>org.exoplatform.portal.config.UserPortalConfigService</target-component>
    <component-plugin>
      <name>new.portal.config.user.listener</name>
      <set-method>initListener</set-method>
      <type>org.exoplatform.portal.config.NewPortalConfigListener</type>
      <description>this listener init the portal configuration</description>
      <init-params>
        <object-param>
          <name>group.configuration</name>
          <object type="org.exoplatform.portal.config.NewPortalConfig">
            <field name="ownerType">
              <string>group</string>
            </field>
            <field name="predefinedOwner">
              <collection type="java.util.HashSet">
                <value>
                  <string>/platform/administrators</string>
                </value>
              </collection>
            </field>
            <field name="location">
              <string>war:/conf/gamification-github/portal</string>
            </field>
            <field name="override">
              <boolean>${meeds.gamification.github.portalConfig.metadata.override:true}</boolean>
            </field>
            <field name="importMode">
              <string>${meeds.gamification.github.portalConfig.metadata.importmode:merge}</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
  <external-component-plugins>
    <target-component>org.exoplatform.portal.config.NavigationCategoryService</target-component>
    <component-plugin>
      <name>NavigationCategoryPlugin</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.portal.config.NavigationCategoryPlugin</type>
      <init-params>
        <value-param>
          <name>category.order</name>
          <value>70</value>
        </value-param>
        <value-param>
          <name>uri.order</name>
          <value>50</value>
        </value-param>
        <value-param>
          <name>category</name>
          <value>gamification</value>
        </value-param>
        <value-param>
          <name>uri</name>
          <value>hook_management</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>


